                --backtitle "$BACKTITLE" \
                --title "$TITLE" \
                --menu "$MENU" \
                $HEIGHT $WIDTH $CHOICE_HEIGHT \
                "${OPTIONS[@]}" \
                2>&1 >/dev/tty)

clear
case $CHOICE in
        1)
echo "Booting into Debian in Root mode..."
sudo chroot /usr/piRoot/debian /bin/su -l pi
        2)
            echo "Booting into Kali Linux in Root mode..."
sudo chroot /usr/piRoot/kali /bin/su -l pi
